{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": [
			"node"
		],
		"emitDecoratorMetadata": true,
		"target": "es2015",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.e2e-spec.ts",
		"src/**/*.test.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
