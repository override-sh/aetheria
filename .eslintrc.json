{
	"root": true,
	"ignorePatterns": [
		"**/*"
	],
	"plugins": [
		"@nx"
	],
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx",
				"*.js",
				"*.jsx"
			],
			"rules": {
				"@nx/enforce-module-boundaries": [
					"error",
					{
						"enforceBuildableLibDependency": true,
						"allow": [],
						"depConstraints": [
							{
								"sourceTag": "scope:backend",
								"onlyDependOnLibsWithTags": [
									"scope:backend",
									"scope:shared"
								]
							},
							{
								"sourceTag": "scope:front-end",
								"onlyDependOnLibsWithTags": [
									"scope:front-end",
									"scope:shared"
								]
							},
							{
								"sourceTag": "scope:shared",
								"onlyDependOnLibsWithTags": [
									"scope:shared"
								]
							},
							{
								"sourceTag": "*",
								"onlyDependOnLibsWithTags": [
									"*"
								]
							}
						]
					}
				]
			}
		},
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"extends": [
				"plugin:@nx/typescript"
			],
			"rules": {}
		},
		{
			"files": [
				"*.js",
				"*.jsx"
			],
			"extends": [
				"plugin:@nx/javascript"
			],
			"rules": {}
		}
	],
	"rules": {
		"no-mixed-spaces-and-tabs": "off"
	}
}
