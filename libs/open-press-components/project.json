{
	"name": "open-press-components",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/open-press-components/src",
	"projectType": "library",
	"targets": {
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": [
				"{options.outputFile}"
			],
			"options": {
				"lintFilePatterns": [
					"libs/open-press-components/**/*.{ts,tsx,js,jsx}"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "libs/open-press-components/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": [
		"scope:front-end"
	]
}
