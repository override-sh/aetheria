{
	"name": "example-plugin",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/example-plugin/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/libs/example-plugin",
				"tsConfig": "libs/example-plugin/tsconfig.lib.json",
				"packageJson": "libs/example-plugin/package.json",
				"main": "libs/example-plugin/src/index.ts",
				"assets": [
					"libs/example-plugin/*.md"
				]
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs example-plugin {args.ver} {args.tag}",
			"dependsOn": [
				"build"
			]
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": [
				"{options.outputFile}"
			],
			"options": {
				"lintFilePatterns": [
					"libs/example-plugin/**/*.ts"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "libs/example-plugin/jest.config.ts",
				"passWithNoTests": false
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": [
		"scope:backend"
	]
}
